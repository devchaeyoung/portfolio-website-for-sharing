{
  "extends": ["react-app", "react-app/jest", "prettier"],
  "plugins": ["prettier"],
  "ignorePatterns": [
    "node_modules/",
    "build/",
    "dist/",
    "coverage/",
    ".eslintrc.js"
  ],
  "rules": {
    "prettier/prettier": [
      "warn",
      { "singleQuote": true, "semi": false, "endOfLine": "auto" }
    ],
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ],
    "no-undef": "off",
    "no-console": "off",
    "quotes": ["warn", "single", { "avoidEscape": true }]
  }
}
